<div class="flex flex-row justify-between gap-4 my-4 bg-white-800 border rounded-lg p-4 shadow-lg shadow-black-500/50 w-1/2 min-w-[300px]">
  <div class="flex gap-24 md:justify-between">
    <div class ="flex flex-col justify-between mt-4 gap-4">
      <h2 class="text-4xl font-bold font-kaushan text-primary">Your profile</h2>
      <div class="flex flex-col justify-center mt-4 gap-4">
        <p class="font-normal text-gray-700"><span class="font-bold">Name:</span> <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></p>
        <p class="font-normal text-gray-700"><span class="font-bold">Email:</span> <%= @user.email %></p>
        <p class="font-normal text-gray-700"><span class="font-bold">Joined:</span> <%= @user.created_at.strftime("%b %Y") %></p>
    </div>
    </div>
    <div class="flex flex-col gap-4 items-end">
      <%= link_to edit_user_registration_path  do %>
        <i class='fa-solid fa-pen text-gray-400'></i>
      <% end %>
      <%= cl_image_tag @user.profile_image.key, class: "items-end w-40 h-40 rounded-full object-cover border-2 border-primary" %>
    </div>
  </div>
</div>
