<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @wigs.each do |wig| %>
    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
      <a href="#">
        <img class="rounded-t-lg" src="<%= wig.image %>" alt="<%= wig.name %>" />
      </a>
      <div class="p-5">
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= wig.name %></h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          Material: <%= wig.material %>, Color: <%= wig.color %>, Hairstyle: <%= wig.hair_style %>, Length: <%= wig.length %>
        </p>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          Price: $<%= wig.price %>
        </p>
        <a href="#" class="btn">
          Read more
          <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
          </svg>
        </a>
      </div>
    </div>
  <% end %>
</div>
