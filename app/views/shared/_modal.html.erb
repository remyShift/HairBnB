<div class="w-full h-full fixed inset-0 z-10 hidden justify-center items-center bg-black bg-opacity-50 transition-all duration-300 ease-in-out opacity-0"
    data-toggle-login-target="overlay"
    data-action="click->toggle-login#closeOnOverlayClick">

    <turbo-frame id="modalSignup">
        <div class="bg-slate-100 w-96 border border-slate-600 rounded-md flex-col p-4 translate-y-10 transition-transform duration-300 ease-in-out hidden"
            data-toggle-login-target="modalSignup">
            <%= render "shared/form-signup" %>
        </div>
    </turbo-frame>

    <turbo-frame id="modalLogin">
        <div class="bg-slate-100 w-96 border border-slate-600 rounded-md flex-col p-4 translate-y-10 transition-transform duration-300 ease-in-out hidden"
            data-toggle-login-target="modalLogin">
            <%= render "shared/form-login" %>
        </div>
    </turbo-frame>
</div>