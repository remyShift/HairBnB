<h3 class="text-2xl font-bold font-kaushan text-primary">Your bookings</h3>
<% @bookings.each do |booking| %>
  <div class="flex items-center gap-4 p-3 bg-white border-2 border-gray-200 rounded-lg shadow-md w-full">
    <!-- Image de la wig -->
    <%= cl_image_tag booking.wig.wig_image.key, class: "object-contain rounded-full h-24 w-24 bg-transparent shadow-lg shadow-black-500/50" %>
    <div class="flex flex-row grow justify-between gap-4">
      <div class="flex flex-col gap-6">
        <p class="text-xl font-bold tracking-tight text-gray-900"><%= booking.wig.name.capitalize %></p>
        <p class="mb-3 font-normal text-gray-700">
        <i class="fa-solid fa-location-dot text-primary"></i>
          <%= booking.wig.address.split(",")[-2].split(" ").last %>
        </p>
      </div>
      <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-1">
          <p class="text-lg font-bold font-kaushan">From: </p>
          <p class="text-md"><%= booking.start_time.strftime("%d/%m/%Y") %></p>
        </div>
        <div class="flex flex-col gap-1">
          <p class="text-lg font-bold font-kaushan">To: </p>
          <p class="text-md"><%= booking.end_time.strftime("%d/%m/%Y") %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

