<nav id="navbar"
class="bg-slate-200 w-full h-[10vh] min-h-16 flex justify-between items-center px-5 shadow-md"
    data-controller="toggle-login">
    <%= link_to "HairBnB", root_path, class: "text-2xl md:text-3xl font-bold font-kaushan text-primary" %>

    <% if user_signed_in? %>
        <div class="flex items-center gap-3">
            <%= cl_image_tag current_user.profile_image.key, class: "w-16 h-16 rounded-full object-cover" %>
            <p class="text-sm text-gray-600">
                Welcome, <span class="font-bold text-xl text-primary font-kaushan hover:underline transition-all duration-300 cursor-pointer"
                    data-action="click->toggle-login#toggle">
                    <%= current_user.first_name %>
                </span>
            </p>
        </div>
    <% else %>
        <i class="fa-solid fa-user-large text-xl cursor-pointer" data-action="click->toggle-login#toggle"></i>
    <% end %>

    <%= render "shared/user-modal" %>

    <%= render "shared/modal" %>
</nav>
