<%= simple_form_for(wig, html: {multipart: true}) do |f| %>
<div class="my-4 flex flex-col items-center gap-2">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                              placeholder: "Blue long shiny wig" }
                %>
    <%= f.input :material,
                required: true,
                :collection => Wig::MATERIALS,
                :prompt => "Select material",
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none" }
                %>
    <%= f.input :hair_style,
                required: true,
                :collection => Wig::HAIRSTYLES,
                :prompt => "Select hair style",
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none" }
                %>
    <%= f.input :length,
                required: true,
                :collection => Wig::LENGTHS,
                :prompt => "Select length",
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none" }
                %>
    <%= f.input :address,
                required: true,
                input_html: { class: "hidden w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                              placeholder: "21 rue des Capucins, 69001 Lyon",
                              data: {address_autocomplete_target: "address"}
                              },
                wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
                              %>
    <%= f.input :color,
                required: true,
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                              placeholder: "Blue" } %>
    <%= f.input :price,
                required: true,
                input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                              placeholder: "150" } %>
    <%= f.input :wig_image,
                as: :file,
                required: true,
                input_html: { class: "flex flex-col items-start justify-center w-[80vw] md:w-[50vw] mb-2", id: "file-upload" } %>
    <%= f.button :submit, "Create",
                 class: "btn w-[80vw] md:w-[50vw]" %>
  </div>
<% end %>
