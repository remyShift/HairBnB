<h2 class="text-2xl font-bold text-center font-kaushan text-primary">Sign up</h2>

<%= simple_form_for(@resource, as: @resource_name, url: registration_path(@resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="my-4 flex flex-col items-center gap-2">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first-name",
                              class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                              placeholder: "John" } %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last-name",
                              class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                              placeholder: "Doe" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email",
                              class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                              placeholder: "john.doe@example.com" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password",
                              class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                              placeholder: "********" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password",
                              class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                              placeholder: "********" } %>
    <%= f.button :submit, "Sign up", class: "bg-primary text-white rounded-md w-1/2 p-2 hover:bg-primary/80 cursor-pointer" %>
  </div>
<% end %>