<div class="flex flex-col items-center">
<div class="my-4 flex flex-col items-start gap-2">
  <h2 class="text-3xl font-bold font-kaushan text-primary">Edit your profile</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                 }
      %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                 }
      %>
      <%= f.input :profile_image,
                  required: true,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                }
      %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: {class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none"}
      %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { class: "w-[80vw] md:w-[50vw] border border-slate-600 rounded-md p-2 flex flex-col gap-2 focus:border-primary focus:outline-none",
                                autocomplete: "current-password" } %>
    </div>


      <%= f.button :submit, "Update" %>
        <% end %>
         <div class= "flex items-center">
      <%= link_to :back, class: "btn " do%>
         <i class="fa-solid fa-arrow-left mr-1"></i> Back
      <%end %>
<%= button_to "Delete my account",
              registration_path(resource_name),
              class: "btn mx-2",
              data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
              method: :delete %>
    </div>
    </div>
</div>
